---
import Layout from '../layouts/Layout.astro'
import { nosotrosText } from '../mock/textViews/nosotrosText'
import Subtitle from '../components/Subtitle'
import Text from '../components/Text'
import { Team } from '../mock/team'

// Definir el contenido para misión, visión y valores
const mvvContent = [
  { content: nosotrosText.mision, icon: "M" },
  { content: nosotrosText.vision, icon: "V" },
  { content: nosotrosText.valores, icon: "Va" },
];
---

<Layout title={nosotrosText.metaTitle} content={nosotrosText.metaContent}>
	<main class="bg-COLOR1">
       
        <section class="w-full mx-auto my-8 px-4 py-8 md:w-11/12 xl:w-10/12 border-2 border-t-0 border-b-0 border-double border-COLOR1 bg-white flex flex-col justify-center items-center" >

            <h2 class="text-center text-lg md:text-xl xl:text-2xl font-heading uppercase text-COLOR1 font-bold animate-fadeInUp">
                Sobre Nosotros
            </h2>

            <section class="w-full my-8 px-8 md:px-12 xl:px-20 py-8 " style={{ backgroundImage: `url(${nosotrosText.nosotrosFirstImg})`, backgroundSize: 'cover', backgroundPosition: 'center' }}>
                <div class="bg-black/60 p-4 md:p-8 xl:p-12 mt-4 md:mt-6 xl:mt-8 rounded-md">
                
                    <p class="text-white font-thin text-center">{nosotrosText.Subtitle1}</p>
                </div>
            </section>

            <!-- Nuestro equipo -->
            <Subtitle name={nosotrosText.Subtitle4} textColor='COLOR3' client:visible />
            <Text text={nosotrosText.text2} textColor='black/60' client:visible/>
            <div class="w-full md:w-10/12 mt-12">
                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                  {Team.map((member) => (
                    <div class="flip-card bg-transparent w-full h-64">
                      <div class="flip-card-inner relative w-full h-full transition-transform duration-700 transform-style-preserve-3d">
                        <div class="flip-card-front absolute w-full h-full bg-black/60 rounded-lg shadow-lg overflow-hidden">
                          <img src={member.image} alt={member.name} class="w-full h-48 object-cover" />
                          <div class="p-4 md:p-2">
                            <h3 class="text-lg font-semibold text-white">{member.name}</h3>
                            <p class="text-sm text-CBACKGROUND">{member.role}</p>
                          </div>
                        </div>
                        <div class="flip-card-back absolute w-full h-full bg-COLOR1 text-white rounded-lg shadow-lg overflow-hidden flex flex-col justify-center items-center p-4 transform rotate-y-180">
                          <h3 class="text-lg font-semibold mb-2">{member.name}</h3>
                          <p class="text-sm text-center">{member.description}</p>
                        </div>
                      </div>
                    </div>
                  ))}
                </div>
            </div>

			<!-- HISTORIA, subtitulo y texto -->
			<Subtitle name={nosotrosText.Subtitle2} textColor='COLOR3' client:visible />
			<Text text={nosotrosText.text1} textColor='black/60' client:visible/>

			<!-- Mision, vision y valores -->
			<Subtitle name={nosotrosText.Subtitle3} textColor='COLOR3' client:visible />
			<div class="w-full mt-12">
				<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-8">
					{mvvContent.map((item) => (
						<div class="bg-black/60 hover:bg-CBACKGROUND text-white hover:text-black/60 rounded-lg shadow-lg overflow-hidden transform transition duration-300 hover:scale-105">
							<div class="p-6">
								<div class="flex items-center justify-center w-12 h-12 bg-COLOR2 rounded-full text-white text-xl font-bold mb-4">
									{item.icon}
								</div>
								<p>{item.content}</p>
							</div>
						</div>
					))}
				</div>
			</div>


			<Text text={nosotrosText.text3} textColor='black/60' client:visible/>

        </section>
    </main>
</Layout>

<script>
	const images = document.querySelectorAll('.relative > div');
	images.forEach((img) => {
	  const htmlImg = img as HTMLElement;
	  htmlImg.addEventListener('mouseenter', () => {
		htmlImg.style.zIndex = '40';
	  });
	  htmlImg.addEventListener('mouseleave', () => {
		htmlImg.style.zIndex = '';
	  });
	});
</script>
  
<style>
	
	.flip-card:hover .flip-card-inner {
		transform: rotateY(180deg);
	}
	.flip-card-inner {
		transition: transform 0.6s;
		transform-style: preserve-3d;
	}
	.flip-card-front, .flip-card-back {
		backface-visibility: hidden;
	}
	.flip-card-back {
		transform: rotateY(180deg);
	}

</style>